@page
@model UsersAuth.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="row">
    <div class="col-md-4 mx-auto">

        <div class="card shadow-lg p-3">
            <div class="card-body">
                <div class="card-title">
                    <h2 >@ViewData["Title"]</h2>
                </div>
                <hr />

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Register.UserName">Nombre de usuario</label>
                        <input asp-for="Register.UserName" class="form-control" type="text" />
                        <span asp-validation-for="Register.UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Register.Email"></label>
                        <input asp-for="Register.Email" class="form-control" type="email" />
                        <span asp-validation-for="Register.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Register.Password">Contraseña</label>
                        <input asp-for="Register.Password" class="form-control" type="password" />
                        <span asp-validation-for="Register.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Register.Password2">Confirmar contraseña</label>
                        <input asp-for="Register.Password2" class="form-control" type="password" />
                        <span asp-validation-for="Register.Password2" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-4 d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    </div>

                    <div class="form-group pt-4 text-center">
                        <p>
                            ¿Ya tienes cuenta? <a asp-page="./Login">Iniciar sesión</a>
                        </p>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}