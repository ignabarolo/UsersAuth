@page
@model UsersAuth.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="row">
    <div class="col-md-4 mx-auto">

        <div class="card shadow-lg p-3">
            <div class="card-body">
                <div class="card-title">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <form method="post" novalidate>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Login.Email"></label>
                        <input asp-for="Login.Email" class="form-control" type="email" />
                        <span asp-validation-for="Login.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Login.Password">Contraseña</label>
                        <input asp-for="Login.Password" class="form-control" type="password"/>
                        <span asp-validation-for="Login.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group pt-2 text-center">
                        <p>
                            <a asp-page="./ForgotPassword">Olvide mi contraseña</a>
                        </p>
                    </div>

                    <div class="form-group d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    </div>

                    <div class="form-group pt-4 text-center">
                        <p>
                            ¿No tienes cuenta? <a asp-page="./Register">Regístrate</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}