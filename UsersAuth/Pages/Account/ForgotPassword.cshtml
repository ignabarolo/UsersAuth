@page
@model UsersAuth.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card shadow-lg p-2">
            <div class="card-body">
                <div class="card-title">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="form-group pt-1 text-center">
                    <p>
                        ¿Recuerda su contraseña? <a asp-page="./Login">Iniciar sesión</a>
                    </p>

                </div>
                <hr />
                <form method="post" novalidate>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 pt-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}