@using Microsoft.AspNetCore.Identity
@using UsersAuth.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    Hola @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="nav-item">
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="form-inline">
                    <input type="hidden" name="returnUrl" value="/Account/Logout" />
                    <button type="submit" class="nav-link btn btn-link">
                        Cerrar sesión
                    </button>
                </form>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="pe-3"><a asp-area="Identity" asp-page="/Account/Register">Registrarse</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a></li>
    </ul>
}