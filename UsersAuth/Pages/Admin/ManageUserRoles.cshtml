@page
@model UsersAuth.Pages.Admin.ManageUserRolesModel
@{
    ViewData["Title"] = "Gestionar Roles";
}

<h1>@ViewData["Title"]</h1>
<p>Usuario: <strong>@Model.ViewModel.UserEmail</strong></p>
<hr />
<form method="post" class="w-25 mx-auto">
    <input type="hidden" asp-for="ViewModel.UserId" />
    <div class="card shadow">
        <div class="card-header">
            <h5 class="mb-0">Asignación de Roles</h5>
        </div>
        <div class="card-body">
            @if (Model.ViewModel.RoleAssignments != null && Model.ViewModel.RoleAssignments.Any())
            {
                @for (int i = 0; i < Model.ViewModel.RoleAssignments.Count; i++)
                {
                    var role = Model.ViewModel.RoleAssignments[i];
                    <div class="form-check mb-2">
                        <input type="checkbox"
                               asp-for="ViewModel.RoleAssignments[i].IsAssigned"
                               class="form-check-input" />

                        <label asp-for="ViewModel.RoleAssignments[i].IsAssigned" class="form-check-label">
                            @role.RoleName
                        </label>

                        <input type="hidden" asp-for="ViewModel.RoleAssignments[i].RoleName" />
                    </div>
                }
            }
            else
            {
                <p>No hay roles definidos en el sistema.</p>
            }
        </div>
    </div>

    <div class="mt-4 text-center">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-page="./Roles" class="btn btn-secondary">Cancelar y Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}