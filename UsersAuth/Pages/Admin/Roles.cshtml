@page
@model UsersAuth.Pages.Admin.RolesModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Gestión de Roles de Usuarios";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Roles Asignados</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userRoleModel in Model.UsersWithRoles)
                {
                    <tr>
                        <td>@userRoleModel.Email</td>
                        <td>
                            @if (userRoleModel.Roles.Any())
                            {
                                @string.Join(", ", userRoleModel.Roles)
                            }
                            else
                            {
                                <em>Sin roles</em>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-page="./ManageUserRoles" asp-route-userId="@userRoleModel.UserId">
                                Gestionar Roles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var isValid = JSON.parse('@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.IsValid))');
        var statusMessage = JSON.parse('@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusMessage))');

        if (isValid && statusMessage ) {
            Swal.fire({
                title: '¡Éxito!',
                text: statusMessage,
                icon: 'success',
                confirmButtonText: 'Aceptar',
                timer: 3000
            });
        } else if(!isValid && statusMessage) {
            Swal.fire({
                title: '¡Error!',
                text: statusMessage,
                icon: 'error',
                confirmButtonText: 'Aceptar',
                timer: 3000
            });
        }  
    </script>
}